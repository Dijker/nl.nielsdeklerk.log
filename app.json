{
  "id": "nl.nielsdeklerk.log",
  "sdk": 2,
  "name": {
    "en": "Simple LOG"
  },
  "description": { "en": "Use this app for simple logging." },
  "category": "tools",
  "images": { "large": "assets/images/large.png", "small": "assets/images/small.png" },
  "version": "2.2.1",
  "compatibility": "1.x >=1.5.0",
  "author": { "name": "Niels de Klerk", "email": "mail@nielsdeklerk.nl" },
  "tags": { "en": ["Log", "Tools", "simple", "sys"] },
  "contributors": {
    "developers": [
      {
        "name": "Niels de Klerk",
        "email": "mail@nielsdeklerk.nl"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "NielsdeKlerk"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/nklerk/nl.nielsdeklerk.log/issues"
  },
  "athomForumDiscussionId": 3052,
  "homeyCommunityTopicId": 146,
  "flow": {
    "actions": [
      {
        "id": "Input_log",
        "title": {
          "en": "Add Something to the log",
          "nl": "Voeg iets toe aan de log"
        },
        "args": [
          {
            "name": "log",
            "type": "text",
            "placeholder": {
              "en": "Data to log...",
              "nl": "Gegevens voor logboek..."
            }
          }
        ]
      },
      {
        "id": "Input_group_log",
        "title": {
          "en": "Add Something to a log group",
          "nl": "Voeg iets toe aan een log groep"
        },
        "args": [
          {
            "name": "group",
            "type": "text",
            "placeholder": {
              "en": "Group name...",
              "nl": "Groepsnaam..."
            }
          },
          {
            "name": "log",
            "type": "text",
            "placeholder": {
              "en": "Data to log...",
              "nl": "Gegevens voor logboek..."
            }
          }
        ]
      },
      {
        "id": "Clear_log",
        "title": {
          "en": "Clear log data",
          "nl": "Verwijder log data"
        }
      },
      {
        "id": "Clear_log_Older",
        "title": {
          "en": "Clear log data older then (Dagen)",
          "nl": "Verwijder log data ouder dan (Dagen)"
        },
        "args": [
          {
            "name": "days",
            "type": "number"
          }
        ]
      }
    ]
  }
}
